FROM php:7.0.19-fpm



WORKDIR /var/www



# Install VIM and GIT
RUN apt-get update && apt-get install -y \
build-essential \
libpng-dev \
libjpeg62-turbo-dev \
libfreetype6-dev \
locales \
zip \
jpegoptim optipng pngquant gifsicle \
vim \
unzip \
curl \
libfreetype6-dev \
libjpeg62-turbo-dev \
libicu-dev \
libpng-dev \
zlib1g-dev




RUN docker-php-ext-install mysqli pdo pdo_mysql intl zip gd



# Install composer
RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer



RUN chown www-data:www-data /var
RUN usermod -u 1000 www-data



USER www-data



CMD ["php-fpm"]